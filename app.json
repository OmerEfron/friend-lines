{
  "expo": {
    "name": "friendlines",
    "slug": "friendlines",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.friendlines.app",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "NSPhotoLibraryUsageDescription": "Friendlines needs access to your photos to let you upload newsflash images and profile avatars.",
        "NSCameraUsageDescription": "Friendlines needs access to your camera to let you take photos for newsflashes and profile avatars.",
        "ExpoLocalization_supportsRTL": true,
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.friendlines.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "supportsRTL": true,
      "eas": {
        "projectId": "e6050802-af07-44f2-b6ab-2e1bf3f789d2"
      }
    },
    "owner": "omerefron"
  }
}
